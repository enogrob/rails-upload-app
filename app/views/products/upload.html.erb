<p id="notice"><%= notice %></p>

<h4>Listando Produtos</h4>

<table class="table">
  <thead>
    <tr>
        <th>Comprador</th>
        <th>Descrição</th>
        <th>Preço Unitário</th>
        <th>Quantidade</th>
        <th>Endereço</th>
        <th>Fornecedor</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.buyer %></td>
      <td><%= product.description %></td>
      <td><%= product.unit_price %></td>
      <td><%= product.amount %></td>
      <td><%= product.address %></td>
      <td><%= product.provider %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Importa Novamente', products_import_path, class: "btn btn-link" %>